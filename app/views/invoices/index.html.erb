<% content_for(:title) { "EIS | #{t('.title')}" } %>
<% content_for :hero do %>
    <div class="layout--hero">
        <h1><%= t('.title') %></h1>
        <%= back_link %>
    </div>
<% end %>
<div class="page page--invoices">
    <div class="page--header">
        <div class="wrapper">
            <%= render 'invoices/partials/search_form' %>
        </div>
    </div>
    <div class="page--actions">
        <div class="wrapper">
            <div class="page--actions__left">
                <%= link_to t(:add_credit), 'javascript: void(0);', 'data-dialog': 'add_credit', class: 'button button--secondary' %>
            </div>
            <div class="page--actions__right">
                <%= link_to "#{t('invoices.index.activities')} <i class='fas fa-th-list'></i>".html_safe, account_activities_path %>
            </div>
        </div>
    </div>
    <div class="wrapper">
        <%= render 'invoices/partials/invoice_table' %>
        <%= render partial: 'common/pagination', locals: { pagy: @pagy } if @response.count.positive? %>
    </div>
</div>
<%= render 'invoices/partials/add_credit_form' %>

