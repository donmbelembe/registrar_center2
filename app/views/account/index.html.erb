<% content_for(:title) { "EIS | #{t('account.index.title')}" } %>
<% content_for :hero do %>
    <div class="layout--hero">
        <h1><%= t('account.index.title') %></h1>
        <%= back_link %>
    </div>
<% end %>
<div class="page page--invoices">
    <div class="page--header">
        <div class="wrapper">
            <%= render 'account/partials/search_form' %>
        </div>
    </div>
    <div class="page--actions">
        <div class="wrapper">
            <% if @response.count.positive? %>
                <div class="page--actions__right">
                    <%= link_to "#{t(:download_csv)} <i class='fas fa-download'></i>".html_safe,
                                account_activities_path(format: 'csv', search: params[:search]&.to_unsafe_h) %>
               </div>
            <% end %>
        </div>
    </div>
    <div class="wrapper">
        <%= render 'account/partials/activity_table' %>
        <%= render partial: 'common/pagination', locals: { pagy: @pagy } if @response.count.positive? %>
    </div>
</div>
